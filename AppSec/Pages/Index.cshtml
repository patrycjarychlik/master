@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpeg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Eksploruj najciekawsze miejsca w twoim mieście.<br />
                    <a href="/Shared/Personal">
                        <button class="btn btnWide btn-border color-4 material-design">    Rozpocznij</button>
                    </a>
                    <br /><br />
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Kosztuj nowych potraw i odkrywaj nieznane smaki.<br />
                    <br /><br/>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpeg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Śniadanie, romantyczna kolacja czy wyjście z przyjaciółmi <br />
                    <br /><br />
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<h4>Reklamy, nasi partnerzy:</h4>
<div class="row">
    <div class="col-md-3">
        <h2>Osoby</h2>
        <ul>
            @foreach (var advert in @Model.Adverts1) {
                <li><a href="@advert.Url">@advert.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Serwujemy</h2>
        <ul>
            @foreach (var advert in @Model.Adverts2) {
                <li><a href="@advert.Url">@advert.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Uczelnie</h2>
        <ul>
            @foreach (var advert in @Model.Adverts3) {
                <li><a href="@advert.Url">@advert.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Inne</h2>
        <ul>
            @foreach (var advert in @Model.Adverts4) {
                <li><a href="@advert.Url">@advert.Name</a></li>
            }
        </ul>
    </div>
</div>
